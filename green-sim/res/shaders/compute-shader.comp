#version 430
layout(local_size_x = 1, local_size_y = 1) in;

buffer sim_data {
	struct {
		vec3 velocity;
		float pressure;
		float density;
	} cells[];
};


buffer vertex_color {
	vec4 color[];
};

void main() {
    uint index = gl_GlobalInvocationID.x;

	color[index] = vec4(cells[index].density);
}
